<!-- Manager home page --><!-- This page is only shown to the manager --><!DOCTYPE HTML>{include 'head.tpl' title='IndeedJobs'}	<div id="content">	    <div id="leftColumn">			<div id="searchBox">			  <h1 id="findJob">POSTED JOB</h1>				{if $jobs}					<div id="employerPostedJobs">					   <table>						   <tr><th style="text-align: left;">Job Title</th><th style="text-align: left;">Start Date</th><th style="text-align: left;">End Date</th></tr>						   {foreach from=$jobs key=k item=v}							 <tr><td><a href="job_detail.php?id={$v['Job_id']}">{$v['Job_title']}</a></td><td>{$v['start_date']}</td><td>{$v['end_date']}</td></tr>						   {/foreach}						</table>						<div id="postNewJob">						  <a href="addJob.php"><input class="button" type="button" value="&nbsp; Post New Job &nbsp;"/></a>						  <a href="searchJob.php"><input class="button" type="button" value="&nbsp; Global Search &nbsp;"/></a>						</div>						<div id="postedJobPagi">							{if $previous > 0}								<a href="index.php?page=1">First</a>							{else}							  First							{/if}							{if $previous>0}								<a href="index.php?page={$previous}">Previous</a>							{else}								Previous							{/if}							{for $page=1 to ceil($number_of_jobs/$jobs_per_page)}							  {if $currentPage != $page}								<a href="index.php?page={$page}">{$page}</a>							  {else}								{$page}							  {/if}							{/for}							{if $next>0}							  <a href="index.php?page={$next}">Next</a>							{else}									Next							{/if}							{if $next>0}								<a href="index.php?page={ceil($number_of_jobs/$jobs_per_page)}">Last</a>							{else}							   Last							{/if}						</div>					</div>					{else}				  <p>No jobs has been posted.</p>				{/if}			</div>		</div>		<div id="rightColumn">		    {include 'loginBig.tpl'}		    <img src="images/job-search.jpg" id="advertisement" alt=""/>		    {include 'showCategories.tpl'}		        </div>							{include 'externalLink.tpl'}	</div>	{include 'foot.tpl'}</body></html>